<% if logged_in? %>
  <p>ログイン完了ユーザ： <%= current_user.name %></p>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> ： <%= task.status %></li>
    <% end %>
    <%= link_to '新規作成', new_task_path %>
  </ul>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1><br>
      <h2>Please signup or login</h2>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>